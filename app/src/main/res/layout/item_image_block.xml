<?xml version="1.0" encoding="utf-8"?><LinearLayout    android:id="@+id/item_container"    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tool="http://schemas.android.com/tools"    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="match_parent">    <ImageView        android:id="@+id/image_view"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:scaleType="centerCrop"/>    <TextView        android:id="@+id/image_title"        android:layout_width="match_parent"        android:layout_height="wrap_content"        tool:text="image title"/></LinearLayout>